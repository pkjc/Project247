<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/discoveredPeersActivity"
    tools:context="project.cse247.chat.DiscoveredPeersListActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="458dp"
        android:id="@+id/discovered_peers_list"
        >
    </ListView>

    <Button
        android:id="@+id/createChatRoomBtn"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:onClick="onCreateChatRoomBtnClick"
        android:text="Create Chat Room" />

</LinearLayout>
